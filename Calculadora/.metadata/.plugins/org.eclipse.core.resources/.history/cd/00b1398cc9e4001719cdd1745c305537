import java.util.Scanner;

public class Ejercicio32 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner teclado=new Scanner(System.in);
		System.out.println("Introduzca un número por favor");
		int numero=teclado.nextInt();
		int contador=0;
		int a=2;
		System.out.println(" ");
		
		primo(numero, contador, a); //Metodo es para hallar si el numero que metemos es primo o no

		// Esto es para la tabla de multiplicar
		System.out.println(" ");
		System.out.println("La tabla de multiplicar del "+ numero+" será de:");
		System.out.println(" ");
		
		tablamultiplicar(numero); //Método para sacar la tabla de multiplicar
		
		
		factorial(numero); //Método para sacar el factorial 
		teclado.close();
	}

	public static void factorial(int numero) {
		int contador;
		int a;
		a=1;
		contador=1;
		while (numero>=a) {
			contador=a*contador;
			a++;	
		}
		System.out.println("El factorial de "+numero+" será de "+contador);
	}

	public static void tablamultiplicar(int numero) {
		int contador;
		int a;
		a=0;
		contador=0;
		while (contador<=10) {
			a=contador*numero;
			System.out.println(numero+"x"+ contador+"="+a);
			a=0; //Aquí se resetea el valor de a para que se puedan hacer las tablas bien
			contador++;
			System.out.println(" ");
		}
	}

	public static void primo(int numero, int contador, int a) { //Clase con la cual sacamos el numero primo
		while (a!=numero) {
			if (numero%a==0) {
				contador++;
			}
			a++;
		}
		if (contador==0) {
			System.out.println("El numero "+numero+" es primo");
		} else {
			System.out.println("El numero "+numero+" no es primo");
		}
	}
}
